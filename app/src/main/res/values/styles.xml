    -



    <!-- *************************************************************************************** -->


    <!--Video Player: v1 and v2 -->



    <style parent="AppTheme" name="VideoPlayerActivityTheme">

    <item name="android:windowFullscreen">true</item>

    <item name="windowActionBarOverlay">true</item>

    <item name="actionBarStyle">@style/VideoPlayerActionBarTheme</item>

</style>


    <style parent="AppTheme" name="VideoPlayerActionBarTheme">

    <item name="background">@color/video_player_hud</item>

    <!-- Actionbar background colour -->


    <item name="displayOptions">showHome|homeAsUp|showTitle</item>

</style>

    <!-- Video Description -->



    <style parent="AppTheme" name="VideoDescTextView">

    <item name="android:layout_width">wrap_content</item>

    <item name="android:layout_height">wrap_content</item>

    <item name="android:textColor">@color/video_player_drawer_text</item>

    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>

</style>

    <!-- Comments -->



    <style parent="AppTheme" name="CommentTextView">

    <item name="android:layout_width">wrap_content</item>

    <item name="android:layout_height">wrap_content</item>

    <item name="android:textColor">@color/comment_text</item>

    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>

</style>


    -<style parent="CommentTextView" name="CommentInfoTextView">

    <item name="android:textSize">12sp</item>

</style>

    <style parent="CommentTextView" name="NoCommentsMsgTextView"> </style>

    <!-- Volume / Brightness indicator -->


    <style parent="LoadingProgressBar" name="VideoPlayerIndicator"/>

    <!-- *************************************************************************************** -->


    <!--Video Player: v1 and v2 -->



    -<style parent="AppTheme" name="VideoPlayerSeekBarTetView">

    <item name="android:layout_width">wrap_content</item>

    <item name="android:layout_height">match_parent</item>

    <item name="android:gravity">center_vertical</item>

    <item name="android:paddingLeft">8dp</item>

    <item name="android:paddingRight">8dp</item>

    <item name="android:textColor">#FFBEBEBE</item>

    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>

    <item name="android:textStyle">bold</item>

</style>

    <!-- *************************************************************************************** -->


    <!--Video Player Tutorial -->



    <style parent="AppTheme" name="HandGestureImageView">

    <item name="android:layout_width">@dimen/_15sdp</item>

    <item name="android:layout_height">wrap_content</item>

    <item name="android:scaleType">fitXY</item>

    <item name="android:adjustViewBounds">true</item>

    <item name="android:layout_marginBottom">8dp</item>

    <item name="android:layout_marginEnd">8dp</item>

    <item name="android:layout_marginLeft">8dp</item>

    <item name="android:layout_marginRight">8dp</item>

    <item name="android:layout_marginStart">8dp</item>

</style>


    -<style parent="@style/TextAppearance.AppCompat.Medium.Inverse" name="TutorialTextView">

    <item name="android:layout_width">0dp</item>

    <item name="android:layout_height">wrap_content</item>

    <item name="android:padding">8dp</item>

    <item name="android:gravity">center_horizontal</item>

    <item name="android:text">Tutorial text goes here.</item>

    <item name="android:layout_marginBottom">8dp</item>

    <item name="android:layout_marginEnd">8dp</item>

    <item name="android:layout_marginLeft">8dp</item>

    <item name="android:layout_marginRight">8dp</item>

    <item name="android:layout_marginStart">8dp</item>

</style>

