    <item name="android:layout_height">wrap_content</item>

    <item name="android:textColor">@color/channel_subs</item>

    <item name="android:background">@color/channel_subscribers_bkg</item>

    <item name="android:singleLine">true</item>

    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>

</style>


    -<style parent="AppTheme" name="ChannelAboutTextView">

